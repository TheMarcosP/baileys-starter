<html>
    <head>
        <title>Login</title>
    </head>
    <body>
        <h1>Login</h1>
        {{#if error}}
            <p style='color:red'>{{error}}</p>
        {{/if}}
        <form method='post' action='/login'>
            <label>Username <input name='username' /></label><br />
            <label>Password <input name='password' type='password' /></label><br />
            <button type='submit'>Login</button>
        </form>
    </body>
</html>