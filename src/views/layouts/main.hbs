<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>{{#if title}}{{title}}{{else}}Baileys Boilerplate{{/if}}</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                font-size: 14px;
                margin: 10px;
                padding: 0;
                background-color: white;
            }
            .container {
                max-width: 1400px;
                margin: 0 auto;
                padding: 15px;
                border: 1px solid #ccc;
            }
            h1 {
                font-size: 18px;
                margin: 10px 0;
            }
            table {
                width: 100%;
                border-collapse: collapse;
                margin: 15px 0;
                font-size: 12px;
            }
            th,
            td {
                padding: 6px 8px;
                text-align: left;
                border: 1px solid #ccc;
            }
            th {
                background-color: #f0f0f0;
                font-size: 11px;
                font-weight: bold;
            }
            button {
                background-color: #ddd;
                color: black;
                border: 1px solid #ccc;
                padding: 4px 8px;
                cursor: pointer;
                font-size: 11px;
            }
            button:hover {
                background-color: #bbb;
            }
            a {
                color: blue;
                text-decoration: underline;
                font-size: 12px;
            }
            p {
                font-size: 12px;
                margin: 10px 0;
            }
        </style>
    </head>
    <body>
        <div class='container'>
            {{{body}}}
        </div>
    </body>
</html>